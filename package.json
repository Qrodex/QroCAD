{
  "name": "qrocad-desktop",
  "version": "2.0.0",
  "description": "The most insane, life-changing computer-aided design application on the web",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "distCI": "electron-builder --win --linux --mac",
    "distdev": "electron-builder --win"
  },
  "repository": "https://github.com/Qrodex/QroCAD",
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "author": "Qrodex",
  "license": "AGPL-3.0-or-later",
  "dependencies": {
    "@electron/remote": "^2.0.10",
    "electron-prompt": "^1.7.0",
    "electron-updater": "^6.1.1",
    "jquery": "^3.7.0"
  },
  "devDependencies": {
    "electron": "^25.4.0",
    "electron-builder": "^20.44.4"
  },
  "build": {
    "appId": "com.qrodex.qrocad",
    "productName": "QroCAD Desktop",
    "fileAssociations": [
      {
        "ext": "qrocad",
        "name": "QroCAD Project",
        "icon": "assets/qrocad.png"
      },
      {
        "ext": "qrocad2",
        "name": "QroCAD 2 Project",
        "icon": "assets/qrocad2.png"
      }
    ],
    "win": {
      "verifyUpdateCodeSignature": false,
      "target": [
        "nsis",
        "portable"
      ],
      "publisherName": "Qrodex"
    },
    "linux": {
      "target": [
        "deb",
        "AppImage",
        "snap",
        "rpm"
      ],
      "maintainer": "Qrodex",
      "category": "Utility"
    },
    "mac": {
      "target": [
        "zip",
        "tar.gz"
      ],
      "category": "public.app-category.utilities"
    }
  }
}
